---
import Layout from '@/layouts/Layout.astro';
import Logo from '@/components/Logo.astro';
---

<Layout title='Tronefilms' description='Tronefilms es una pequeña productora de cine y cortometrajes creada por un grupo de amigos apasionados por el cine.'>
	<section class="mx-auto text-center mb-8 lg:mb-16 grid grid-cols-1 md:grid-cols-3 border-b border-neutral-800 overflow-hidden">
		<img src="img/laultimacarta.webp" alt="Portada de La Última Carta" class="overflow-hidden w-full h-auto object-cover md:col-span-2 md:row-span-1 transition-all duration-200">
		<div class="flex flex-col bg-neutral-900 border-t border-neutral-800 items-center justify-center md:border-t-0 md:border-s md:col-span-1 md:row-span-1">
			<div class="w-full max-w-xs my-8 md:my-10">
				<h3 class="text-2xl md:text-4xl text-left mb-8 font-light">Tronefilms</h3>
				<h2 class="font-bold text-4xl md:text-5xl text-left hover:text-neutral-300 transition">La Ultima Carta</h2>
				<a class="font-semibold text-xl md:text-3xl text-left text-red-200 hover:text-red-800 transition block mt-4" href="https://youtu.be/C1qhXPE-HdQ" target="_blank" title="Ver La Ultima Carta">Ver ahora</a>
			</div>
		</div>
	</section>
	<h1 class="mb-4 text-5xl tracking-tight font-extrabold">Tronefilms</h1>
	<p class="mb-8 text-lg font-normal">Tronefilms es una pequeña productora de cine y cortometrajes creada por un grupo de amigos apasionados por el cine.</p>
</Layout>
